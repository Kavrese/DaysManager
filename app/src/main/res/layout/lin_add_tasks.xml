<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_main_create"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/text_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:text="Создание\nСобытия"
            android:textColor="@color/colorText"
            app:autoSizeTextType="uniform" />

        <ImageView
            android:id="@+id/upper_view"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_weight="20"
            app:srcCompat="@drawable/upper" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="19dp"
        android:layout_weight="85"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:orientation="vertical">

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                app:shape_roundRect_borderColor="@android:color/black"
                app:shape_roundRect_borderWidth="0dp"
                app:shape_roundRect_bottomLeftRadius="20dp"
                app:shape_roundRect_bottomRightRadius="20dp"
                app:shape_roundRect_topLeftRadius="20dp"
                app:shape_roundRect_topRightRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWindow"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/edit_text_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorWindow"
                        android:gravity="center"
                        android:hint="Названия события"
                        android:inputType="text"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText2"
                        android:textSize="23sp"
                        android:visibility="visible" />
                </LinearLayout>

            </com.github.florent37.shapeofview.shapes.RoundRectView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                app:shape_roundRect_borderColor="@android:color/black"
                app:shape_roundRect_borderWidth="0dp"
                app:shape_roundRect_bottomLeftRadius="20dp"
                app:shape_roundRect_bottomRightRadius="20dp"
                app:shape_roundRect_topLeftRadius="20dp"
                app:shape_roundRect_topRightRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWindow"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="Дата"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText2"
                        android:textSize="25sp"
                        app:autoSizeTextType="none" />
                </LinearLayout>

            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                app:shape_roundRect_borderColor="@android:color/black"
                app:shape_roundRect_borderWidth="0dp"
                app:shape_roundRect_bottomLeftRadius="20dp"
                app:shape_roundRect_bottomRightRadius="20dp"
                app:shape_roundRect_topLeftRadius="20dp"
                app:shape_roundRect_topRightRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWindow"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="Время"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText2"
                        android:textSize="25sp" />
                </LinearLayout>

            </com.github.florent37.shapeofview.shapes.RoundRectView>
        </LinearLayout>

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="55"
            app:shape_roundRect_borderColor="@android:color/black"
            app:shape_roundRect_borderWidth="0dp"
            app:shape_roundRect_bottomLeftRadius="20dp"
            app:shape_roundRect_bottomRightRadius="20dp"
            app:shape_roundRect_topLeftRadius="20dp"
            app:shape_roundRect_topRightRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWindow"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/text_op"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorWindow"
                    android:gravity="fill_horizontal"
                    android:hint="Описание события"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorText2"
                    android:textSize="25sp"
                    android:visibility="visible" />
            </LinearLayout>

        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="13"
            app:shape_roundRect_borderColor="@android:color/black"
            app:shape_roundRect_borderWidth="0dp"
            app:shape_roundRect_bottomLeftRadius="100dp"
            app:shape_roundRect_bottomRightRadius="100dp"
            app:shape_roundRect_topLeftRadius="100dp"
            app:shape_roundRect_topRightRadius="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWindow"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:id="@+id/text_button_create"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="7.5"
                    android:text="Создать"
                    android:textColor="@color/colorText"
                    android:textSize="30sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

        </com.github.florent37.shapeofview.shapes.RoundRectView>
    </LinearLayout>
</LinearLayout>