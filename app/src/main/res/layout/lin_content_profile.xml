<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/lin_content_profile_scene">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/weather_view"
        android:layout_width="match_parent"
        android:layout_height="110dp"

        android:layout_marginBottom="80dp"
        android:layout_weight="35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shape_roundRect_borderColor="@android:color/black"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="30dp"
        app:shape_roundRect_bottomRightRadius="30dp"
        app:shape_roundRect_topLeftRadius="30dp"
        app:shape_roundRect_topRightRadius="30dp">

        <LinearLayout
            android:id="@+id/weather_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWindow"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10" />

    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/words_view"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"

        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:layout_weight="35"
        app:layout_constraintEnd_toStartOf="@+id/templates_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_roundRect_borderColor="@android:color/black"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="30dp"
        app:shape_roundRect_bottomRightRadius="30dp"
        app:shape_roundRect_topLeftRadius="30dp"
        app:shape_roundRect_topRightRadius="30dp">

        <LinearLayout
            android:id="@+id/pen_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWindow"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/pen_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/pen" />

                <TextView
                    android:id="@+id/pen_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center|left"
                    android:text="Заметки"
                    android:textColor="@color/colorText"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.5"
                android:orientation="vertical">

            </LinearLayout>

            <ImageView
                android:id="@+id/down_pen"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                app:srcCompat="@drawable/down" />
        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/templates_view"
        android:layout_width="150dp"
        android:layout_height="180dp"

        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_roundRect_borderColor="@android:color/black"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="30dp"
        app:shape_roundRect_bottomRightRadius="30dp"
        app:shape_roundRect_topLeftRadius="30dp"
        app:shape_roundRect_topRightRadius="30dp">

        <LinearLayout
            android:id="@+id/lin_templates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWindow"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/templates_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/templates" />

                <TextView
                    android:id="@+id/templates_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center|left"
                    android:text="Шаблоны"
                    android:textColor="@color/colorText"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.5"
                android:orientation="vertical">

            </LinearLayout>

            <ImageView
                android:id="@+id/down_templates"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                app:srcCompat="@drawable/down" />
        </LinearLayout>
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/stars_view"
        android:layout_width="match_parent"
        android:layout_height="110dp"

        android:layout_weight="35"
        app:layout_constraintTop_toBottomOf="parent"
        app:shape_roundRect_borderColor="@android:color/black"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="30dp"
        app:shape_roundRect_bottomRightRadius="30dp"
        app:shape_roundRect_topLeftRadius="30dp"
        app:shape_roundRect_topRightRadius="30dp">

        <LinearLayout
            android:id="@+id/stars_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWindow"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10" />

    </com.github.florent37.shapeofview.shapes.RoundRectView>
</androidx.constraintlayout.motion.widget.MotionLayout>